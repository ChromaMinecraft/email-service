{
  "version": "0.2.0",
  "configurations": [
    // Use this for production build
    {
      "name": "Launch - Production",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "stackTraceDepth": 100,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.prod.env",
      "showLog": true,
      "internalConsoleOptions": "openOnFirstSessionStart",
      "showGlobalVariables": true
    },

    // Use this for development build
    {
      "name": "Launch - Staging",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "stackTraceDepth": 100,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.staging.env",
      "showLog": true,
      "internalConsoleOptions": "openOnFirstSessionStart",
      "showGlobalVariables": true
    }
  ]
}
